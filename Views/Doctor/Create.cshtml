@* @model Doctor *@

@model PureCareHub_HospitalCare.ViewModels.DoctorRegistrationViewModel

@{
}
<div class="container-fluid">
    <div class="row">

        <div class="col-2 px-0">
            <partial name="_AdminSidebarPartial" />
        </div>

        <div class="col-10">
            <div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="ml-5">Register Doctor</h1>
            </div>


            <div class="wrapper wrapper--w480 custom-background my-4 mx-5">
                <div class="card card-4">
                    <div class="card-body">
                        <form enctype="multipart/form-data" id="registerForm" method="post" asp-action="Create">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-floating mb-4">
                                        <input asp-for="FirstName" class="form-control" autocomplete="on" aria-required="true" placeholder="First Name" />
                                        <label asp-for="FirstName">First Name</label>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-floating mb-4">
                                        <input asp-for="LastName" class="form-control" autocomplete="on" aria-required="true" placeholder="Last Name" />
                                        <label asp-for="LastName">Last Name</label>
                                        <span asp-validation-for="LastName" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>
                           


                            <div class="row">
                                <div class="col-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="PhoneNumber" class="form-control" autocomplete="on" aria-required="true" placeholder="" />
                                        <label asp-for="PhoneNumber">Phone number</label>
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-floating mb-4">
                                        <input asp-for="Email" class="form-control" autocomplete="on" aria-required="true" placeholder="name@example.com" />
                                        <label asp-for="Email">Email</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label asp-for="Photo">Photo</label>
                                    <div class="mb-3">
                                        <input asp-for="Photo" type="file" class="form-control" id="photo" name="photo" accept="image/*">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label asp-for="WorkingShift">Working Shift</label>
                                    <div class="form mb-3">
                                        <select asp-for="WorkingShift" class="form-control">
                                            @foreach (var shift in Enum.GetNames(typeof(ShiftType)))
                                            {
                                                <option value="@shift">@shift</option>
                                            }
                                        </select>
                                        <span asp-validation-for="WorkingShift" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                     
                                 
                            <div class="row">
                                <div class="col-6">
                                    <label asp-for="DoctorGender">Gender</label>
                                    <div class="form mb-3">
                                        <select asp-for="DoctorGender" class="form-control">
                                            @foreach (var gender in Enum.GetNames(typeof(Gender)))
                                            {
                                                <option value="@gender">@gender</option>
                                            }
                                        </select>
                                        <span asp-validation-for="DoctorGender" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form mb-5">
                                        <label asp-for="SelectedDepartmentId" class="control-label"></label>
                                        <select asp-for="SelectedDepartmentId" class="form-control" asp-items="Model.DepartmentsList"></select>
                                    </div>
                                    <span asp-validation-for="SelectedDepartmentId" class="text-danger"></span>
                                </div>
                            </div>
 
                            <div class="row mb-3" style="margin-top:-20px;">
                                <div class="col-12">
                                    <button class="ml-2 mb-2 btn btn-primary" type="button" onclick="showWorkingDays()"><i class="fa fa-calendar" aria-hidden="true" style="font-size:13px"></i> Select Work Days</button>
                                    <div id="workingDaysContainer" style="display: none; display: flex; flex-wrap: wrap; justify-content: space-between;">
                                        <div class="col-4">
                                            <div class="form-check">
                                                <input type="checkbox" name="WorkingDays" value="Monday" id="monday" />
                                                <label class="form-check-label" for="monday">Monday</label>
                                            </div>
                                            <div class="form-check">
                                                <input type="checkbox" name="WorkingDays" value="Thursday" id="thursday" />
                                                <label class="form-check-label" for="thursday">Thursday</label>
                                            </div>
                                            <div class="form-check">
                                                <input type="checkbox" name="WorkingDays" value="Sunday" id="sunday" />
                                                <label class="form-check-label" for="sunday">Sunday</label>
                                            </div>
                                          
                                        </div>
                                        <div class="col-4">
                                          
                                            <div class="form-check">
                                                <input type="checkbox" name="WorkingDays" value="Tuesday" id="tuesday" />
                                                <label class="form-check-label" for="tuesday">Tuesday</label>
                                            </div>
                                          
                                            <div class="form-check">
                                                <input type="checkbox" name="WorkingDays" value="Friday" id="friday" />
                                                <label class="form-check-label" for="friday">Friday</label>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="form-check">
                                                <input type="checkbox" name="WorkingDays" value="Wednesday" id="wednesday" />
                                                <label class="form-check-label" for="wednesday">Wednesday</label>
                                            </div>
                                            <div class="form-check">
                                                <input type="checkbox" name="WorkingDays" value="Saturday" id="saturday" />
                                                <label class="form-check-label" for="saturday">Saturday</label>
                                            </div>
                                        </div>
                                    </div>
                                    <span asp-validation-for="WorkingDays" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label asp-for="StartTime">Start Time</label>
                                    <div class="form mb-3">
                                        <input asp-for="StartTime" class="form-control" type="time">
                                        <span asp-validation-for="StartTime" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label asp-for="EndTime">End Time</label>
                                    <div class="form mb-3">
                                        <input asp-for="EndTime" class="form-control" type="time">
                                        <span asp-validation-for="EndTime" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                                <div class="text-center">
                                    <div class="btn-group" style="width: 65%">
                                        <a href="@Url.Action("List", "Doctor")" class="btn btn-secondary mr-5" style="width: 120px">
                                            <i class="bx bx-user me-1"></i> Back
                                        </a>
                                        <button id="deleteSubmit" type="submit" class="btn btn-success ml-5" style="width: 120px">
                                            Register
                                        </button>
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
 
</style>

<script>

    function showWorkingDays() {
        var container = document.getElementById('workingDaysContainer');
        container.style.display = container.style.display === 'none' ? 'flex' : 'none';
    }    

    $(document).ready(function () {

        // Initialize jQuery UI Datepicker
        $('#datePicker').datepicker({
            dateFormat: 'yy-mm-dd',
            onSelect: function (dateText) {
                // Update the hidden input with the selected dates
                $('#SelectedDates').val(dateText);
            }
        });

        // Initialize Bootstrap Select
        $('#daysOfWeek').selectpicker({
            style: 'btn-light',
            iconBase: 'fa',
            tickIcon: 'fa-check'
        });
    });
</script>


