@model PureCareHub_HospitalCare.ViewModels.PatientsListViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-2 px-0">
            <partial name="_AdminSidebarPartial" />
        </div>


        <div class="col-10" ">

            <div class="container">
                <div class="row">
                    <div class="col-4">
                        <a href="@Url.Action("List", "Doctor")" class="text-decoration-none">
                            <div class="custom-card doctor-card">
                                <h5><b>Doctors</b></h5>
                                <p>Total: @Model.Doctorscount</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-4">
                        <a href="@Url.Action("List", "Appointment")" class="text-decoration-none">
                            <div class="custom-card appointment-card">
                                <h5 class="headersText"><b>Appointment</b></h5>
                                <p>Total: @Model.FullAppointmentCount</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-4">
                        <a href="@Url.Action("Index", "Department")" class="text-decoration-none">
                            <div class="custom-card department-card">
                                <h5><b>Departments</b></h5>
                                <p>Total: @Model.DepartmentsCount</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>


            <div class="container">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h3 class="ml-4"><b>Patient List</b></h3>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a class="btn btn-sm btn-success"> </i>@Model.patientCount Users</a>
                    </div>
                </div>



        @foreach (var patient in Model.Patients)
        {
                    <div class="container" style="max-height: 500px; overflow-y: auto;">
                        <div class="card mb-1">
                            <div class="card-body">
                                <div class="d-flex flex--row">
                                    <span class="avatar avatar-text rounded-3 me-4 bg-info mb-2">
                                @((!string.IsNullOrEmpty(patient.FirstName) ? patient.FirstName[0].ToString() : "") + (!string.IsNullOrEmpty(patient.LastName) ? patient.LastName[0].ToString() : ""))
                                    </span>
                                    <div class="row flex-fill">
                                        <div class="col-5">
                                            <h4 class="h5 mb-0">@patient.FirstName  @patient.LastName</h4>
                                            <span class="badge bg-warning">Appointment Count: @Model.AppointmentCounts[patient.UserId]</span>
                                        </div>
                                        <div class="col-sm-4 py-2">
                                           <span class="badge bg-success">@((Model.PatientsEmails.TryGetValue(patient.UserId, out var email) && !string.IsNullOrEmpty(email)) ? email : "N/A") </span>
                                        </div>
                                        <div class="col-1 mt-3 ml-4">
                                            <a class="edit"><i class="fa fa-eye edit" aria-hidden="true" style="font-size:20px"></i> </a>
                                         </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                       
                    </div>

                   
        }
            </div>
        </div>
    </div>
</div>



<style>
    body {
        background: #eee;
    }

    .card {
        box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%);
        border-radius:10px;
    }

    .badge {
        padding: 5px 5px;
        font-size: 10px;
        color: lightcyan;
    }

    }
    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: 1rem;
    }

    .card-body {
        -webkit-box-flex: 1;
        -ms-flex: 1 1 auto;
        flex: 1 1 auto;
        padding: 0.2rem 0.2rem;
    }

    .avatar-text {
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        align-items: center;
        background: #000;
        color: #fff;
        font-weight: 700;
    }

    .avatar {
        margin-top:13px;
        margin-left:5px;
        width: 2rem;
        height: 2rem;
    }

    .rounded-3 {
        border-radius: 0.5rem !important;
    }

    .mb-2 {
        margin-bottom: 0.2rem !important;
    }

    .me-4 {
        margin-right: 1.5rem !important;
    }

    .custom-card {
        border-radius: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        padding: 5px;
        margin-top: 35px;
        margin-bottom: 5px;
        text-align: center;
        color: #fff;
    }

    .doctor-card {
        background: linear-gradient(45deg, #4e42ff, #070252);
        color: #e0deff;
    }

    .appointment-card {
        background: linear-gradient(45deg, #80f28c, #054d0d);
        color: #e6ffe8;
    }

    .department-card {
        background: linear-gradient(45deg, #99080a, #faae32);
        color: #ffe8ed;
    }


    .edit {
        font-size: 8px;
        margin-right: 20px;
        color: #2196F3;
    }

       .edit:hover {
            color: blue;
        }

</style>
